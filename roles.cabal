source-repository head
  type: git
  location: git://github.com/matt-noonan/roles.git

library
  default-language: Haskell98
  build-depends:    base >= 4.8 && < 5
                  , containers

  exposed-modules:  Data.Roles

  ghc-options: -Wall -fwarn-tabs -O2
  hs-source-dirs: src
